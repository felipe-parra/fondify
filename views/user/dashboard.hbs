<div class="container row">
  <div class="col s6 m6">
    <!-- Grey navigation panel -->
    <ul class="collection with-header">
        <li class="collection-header"><h4>User</h4></li>
        {{#if loggedUser}}
        <li class="collection-item">
          <div>
            {{loggedUser.name}}
            <a href="edit/{{loggedUser._id}}" class="secondary-content">
              <i class="material-icons">
                edit
              </i>
            </a>
          </div>
          </li>
        {{/if}}
      </ul>
  </div>
    <div class="container">
      <div class="col s6 m6">
        <ul class="collection with-header">
          <li class="collection-header">
            <h4>Pedidos</h4>
          </li>
            {{#each orders as |order|}}
              <li>
                <a href="{{order._id}}"></a>
              </li>
            {{/each}}
        </ul>
      </div>
    </div>
  </div>
